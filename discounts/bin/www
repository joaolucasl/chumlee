#!/usr/bin/env node

const server = require('../src/index.js')
const http = require('http')

const port = (process.env.PORT || '3000')

const init = async () => {
    await server.start()
    console.log(`Server running at ${server.info.uri}`)
}

process.on('unhandledRejection', (err) => {
    console.error(err)
    process.exit(1)
})

init()